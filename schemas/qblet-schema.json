{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Qblet Manifest Schema v1.0",
  "type": "object",
  "required": ["qbletVersion", "info", "interfaces"],
  "properties": {
    "qbletVersion": { "type": "string", "enum": ["1.0"] },
    "info": {
      "type": "object",
      "required": ["id", "name", "domain"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "domain": { "type": "string" }
      }
    },
    "interfaces": {
      "type": "object",
      "required": ["machine_api"],
      "properties": {
        "human_ui": { "type": "object" },
        "machine_api": { "type": "object", "required": ["base_url"] }
      }
    },
    "capabilities": {
      "type": "object",
      "properties": {
        "data_exposed": { "type": "array" },
        "events_emitted": { "type": "array" }
      }
    }
  }
}
